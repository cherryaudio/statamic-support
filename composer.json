{
    "name": "acoustica/statamic-support",
    "description": "A Statamic addon that provides a support contact form with pluggable helpdesk provider integration and spam validation",
    "keywords": [
        "statamic",
        "support",
        "contact form",
        "helpdesk",
        "kayako",
        "zendesk",
        "freshdesk"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Acoustica",
            "email": "support@acoustica.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "statamic/cms": "^4.0 || ^5.0",
        "laravel/framework": "^10.0 || ^11.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Acoustica\\StatamicSupport\\": "src/"
        }
    },
    "extra": {
        "statamic": {
            "name": "Support",
            "description": "Support contact form with pluggable helpdesk integration"
        },
        "laravel": {
            "providers": [
                "Acoustica\\StatamicSupport\\SupportServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
